<h2>All Traders</h2>

<% if @traders.any? %>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @traders.each do |trader| %>
        <tr>
          <td><%= trader.email %></td>
          <td>
           <%= link_to "View", admin_trader_path(trader) %> |
           <%= link_to "Edit", edit_admin_trader_path(trader) %> |
           <%= button_to "Delete", admin_trader_path(trader), method: :delete, data: { confirm: "Are you sure you want to delete this trader?" } %>




          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No traders found.</p>
<% end %>

<br>
<%= link_to "Create New Trader", new_admin_trader_path %>
<br>
<%= link_to "← Back to Dashboard", admin_dashboard_path, class: "button" %>
