<h2><%= @trader.new_record? ? "New Trader" : "Edit Trader" %></h2>

<%= form_with model: @trader, url: @trader.new_record? ? admin_traders_path : admin_trader_path(@trader), local: true do |form| %>
  <% if @trader.errors.any? %>
    <div>
      <h4><%= pluralize(@trader.errors.count, "error") %> prevented this trader from being saved:</h4>
      <ul>
        <% @trader.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit @trader.new_record? ? "Create Trader" : "Update Trader" %>
  </div>
  <%= link_to "← Back to All Traders", admin_traders_path, class: "button" %>

<% end %>
