<!-- Header Container -->
<div class="header">
  <!-- Left: Title -->
  <h3 class="title">Future Secure</h3>

  <!-- Right: Subtitle -->
  <h3 class="subtitle"> Secure your future today. </h3>  
</div>

<div class="login-container">
  <div class="login-box">
    <i class="fa-solid fa-pen-to-square logo"></i>
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
      <div class="input-field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-box" %>
      </div>

      <div class="input-field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "input-box" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="input-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="login-button">
        <%= f.submit "Log in", class: "btn-login" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>