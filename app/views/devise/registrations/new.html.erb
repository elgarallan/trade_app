<!-- Header Container -->
<div class="header">
  <!-- Left: Title -->
  <h3 class="title">Future Secure</h3>

  <!-- Right: Subtitle -->
  <h3 class="subtitle"> Secure your future today. </h3>  
</div>

<div class="login-container">
  <div class="login-box">
    <i class="fa-solid fa-pen-to-square logo"></i>

    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "login-form") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="input-field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-box" %>
      </div>

      <div class="input-field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(min of <%= @minimum_password_length %> characters)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input-box" %>
      </div>

      <div class="input-field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-box" %>
      </div>

      <div class="login-button">
        <%= f.submit "Sign up", class: "btn-login" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>